<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="pref_username"
        android:title="@string/pref_title_username"
        android:defaultValue="@string/pref_default_username"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="pref_difficulty"
        android:title="@string/pref_difficulty"
        android:entries="@array/pref_difficulties"
        android:entryValues="@array/pref_difficulties"
        android:defaultValue="Easy" />

    <CheckBoxPreference
        android:title="@string/pref_music"
        android:key="pref_music"
        android:defaultValue="true" />

</PreferenceScreen>
